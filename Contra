import random 

print("")
caracteres = "+-/*!&$#?=@abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

pregunta = input("Bienvenido, te gustaría generar una contraseña aleatoriamente? (y/n): ")
print("")

if pregunta == "y":

    nombre = input("Ingresa tu nombre: ")
    longitud = int(input("¿Cuántos caracteres te gustaría tener para tu contraseña?: "))

    contra = ''.join(random.choices(caracteres, k=longitud))

    print("")
    print("Señor(a)", nombre, "su contraseña es:", contra)
    print("")
else:
    print("Entendemos, ten un buen día.")
    print("")


